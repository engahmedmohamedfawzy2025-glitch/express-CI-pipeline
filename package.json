{
  "name": "express-ci-starter",
  "version": "1.0.1",
  "description": "Minimal Node.js/Express app with CI (GitHub Actions), Jest, ESLint (v8), and Prettier.",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "node src/server.js",
    "start": "node src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --ci --runInBand"
  },
  "engines": { "node": ">=20" },
  "dependencies": {
    "express": "4.19.2"
  },
  "devDependencies": {
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "27.9.0",
    "jest": "29.7.0",
    "prettier": "3.3.3",
    "supertest": "6.3.4"
  }
}
